---
import '@fontsource/atkinson-hyperlegible';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Photo from '../components/Photo.astro';
import About from '../components/About.astro'
import Contact from '../components/Contact.astro'
import Podcasts from '../components/Podcasts.astro';
import Texts from '../components/Texts.astro';
import Videos from '../components/Videos.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<Photo image="./_old-bg.jpg"/>
		<About />
		<Photo image="./_pelada-na-net-bg.jpg"/>
		<Podcasts />
		<Photo image="./_rebosteio-bg.jpg"/>
		<Videos />
		<Photo image="./_gabu-bg.jpg"/>
		<Texts />
		<Photo image="./_contato-bg.jpg"/>
		<Contact />
		<Footer />
	</body>
</html>
