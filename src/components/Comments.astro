<style>
	div {
		background-color: var(--azul-medio);
	}

	main {
		padding: 3em auto;
	}

	h1 {
		text-align: center;
		color: var(--amarelo);
		margin: auto;
	}

	h2 {
		text-align: center;
		color: var(--branco-azulado);
		margin: 0 auto;
	}

	p {
		text-align: center;
		color: var(--amarelo);
		margin: 1em auto 0;
	}

	.icons {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 1em;
		margin: 0 auto;
	}

	.icons a {
		text-decoration: none;
		color: var(--amarelo);
	}

	.icons a:hover {
		color: var(--laranja-escuro);
	}

	blockquote {
		color: var(--amarelo);
		border-left: 4px solid var(--branco-azulado);
	}
	
	a {
		color: var(--amarelo);
	}

	a:hover {
		color: var(--laranja-escuro);
	}
</style>
