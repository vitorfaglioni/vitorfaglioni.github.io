<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--amarelo);
		box-shadow: 0 2px 8px rgba(var(--preto), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--azul-claro);
		border-bottom: 4px solid transparent;
		font-weight: bold;
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
